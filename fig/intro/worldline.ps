%!PS-Adobe-2.0 
%%EndProcSet
%%BeginProcSet: Utilities
(fig/plotfonts.ps) run
(fig/plotparameters.ps) run
%%EndProcSet

/width {20 } bind def
/height {3} bind def
/xmax {1} bind def
/xmin {-1} bind def
/ymax {1} bind def
/ymin {-1} bind def
/linesize {2} bind def

(fig/plotutilities.ps) run

0 setgray 
startplot

%atom
0 0 0 setrgbcolor
gsave
-2 in 0 translate
%gsave
BeginEPS
0 0 moveto
0.4 0.4 scale
(fig/eps/atom.eps) run
EndEPS
grestore

gsave
.6 in 1.7 in translate
mark
(fig/cp.loop) run % load loop 1
1 0 0 setrgbcolor
65 PlotStackDataNoClip
% plot data points
mark
(fig/cp2.loop) run % load loop 2
0 1 0 setrgbcolor
65 PlotStackDataNoClip
% plot theory curve

grestore

gsave
0 setgray
1.5 in 2 in moveto
0 in -5 in rlineto
stroke
grestore

endplotnoborder
